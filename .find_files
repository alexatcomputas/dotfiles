#!/bin/bash

function find_files {
  local search_pattern="$1"
  # Sets path depth to 1 if not specified:
  local path_depth=${2:-1}

  echo 'find -maxdepth [1 OR depth specified] -type f -iname $1'
  echo Searching...
  echo ' '

  find -maxdepth $path_depth -type f -iname "$search_pattern" | cat
}

# Use the function:
# ex1: find_files ".*"
# ex2: find_files "file_name" 2
