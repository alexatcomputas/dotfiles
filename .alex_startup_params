# System monitors: htop | gtop | bashtop

up() {
    # default parameter to 1 if non provided
    declare -i d=${@:-1}
    # ensure given parameter is non-negative. Print error and return if it is
    (( $d < 0 )) && (>&2 echo "up: Error: negative value provided") && return 1;
    # remove last d directories from pwd, append "/" in case result is empty
    cd "$(pwd | sed -E 's;(/[^/]*){0,'$d'}$;;')/";
}

# Custom function for stopping all running docker containers
function docker-stop-all() {
    docker stop $(docker ps -a -q)
}

# Function that deletes .identifier-files created when windows copies files into wsl folder.
# Called by stating > delete_files
function delete_files {
    find . -type f -name "*.Identifier" -exec rm -f {} \;
}

# Load function to search for files in current directory:
# Use it by calling the function find_files "[search_string]"
# It performs: find -maxdepth 1 -type f -iname "[search_string]" 
source ~/.find_files

